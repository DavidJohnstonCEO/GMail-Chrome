{
  "name": "LD Engine",
  "version": "0.1",
  "description": "Pulls keywords out of GMail messages and adds related messages to sidebar.",
  "permissions": [
  ],
  "manifest_version": 2,
  "icons": {
    "48" : "sample-48.png",
    "128" : "sample-128.png"
  },
  "content_scripts": [
    {
      "matches": [ "*://mail.google.com/*"],
      "js" : ["jquery-1.8.2.min.js","date.js","jquery.dotdotdot-1.5.1.js","jsrender.js","jquery.views.js","jquery.observable.js","ldengine.js"],
      "css" : ["ldengine.css"]
    }
  ],
  "permissions": [
    "http://localhost/",
    "http://198.101.252.118:3000/",
    "http://198.101.252.118:3001/",
    "storage"
  ],
  "web_accessible_resources": [
    "sidebar.tmpl",
    "popup.tmpl",
    "ajax-loader.gif",
    "close_message.gif"
  ],
  "options_page": "options.html"
}
